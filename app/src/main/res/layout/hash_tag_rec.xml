<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingTop="@dimen/_2sdp"
    android:minWidth="@dimen/_40sdp"
    android:paddingStart="@dimen/_6sdp"
    android:paddingEnd="@dimen/_6sdp"
    android:paddingBottom="@dimen/_2sdp"
    android:layout_height="@dimen/_60sdp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:id="@+id/card"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tagTitleEdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/has_tag_shape"
            android:gravity="start|center"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxWidth="@dimen/_120sdp"
            android:maxLength="14"
            android:maxLines="1"
            android:minWidth="@dimen/_60sdp"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:scrollHorizontally="true"
            android:drawableStart="@drawable/hash_tag"
            android:textColor="@color/text_Color"
            />

    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:id="@+id/deleteBtn"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/circle_shape_pink"
        android:src="@drawable/crossicone"
        app:tint="@color/white"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_minus2sdp"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card" />
</androidx.constraintlayout.widget.ConstraintLayout>