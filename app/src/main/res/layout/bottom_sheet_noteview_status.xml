<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_15sdp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cancelBtn"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        app:cardCornerRadius="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/crossicone" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai_2_semibold"
        android:text="@string/howwasyourdaytoday"
        android:textColor="@color/text_View_Bold"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelBtn" />

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emoji"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/emojiOne"
        app:layout_constraintEnd_toStartOf="@id/emojiTwo"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojitwo"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/emojiTwo"
        app:layout_constraintEnd_toStartOf="@id/emojiThree"
        app:layout_constraintStart_toEndOf="@id/emojiOne"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojithree"
        android:id="@+id/emojiThree"
        android:layout_marginTop="@dimen/_15sdp"

        app:layout_constraintStart_toEndOf="@id/emojiTwo"
        app:layout_constraintEnd_toStartOf="@id/emojiFour"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojifour"
        android:id="@+id/emojiFour"
        android:layout_marginEnd="@dimen/_5sdp"

        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/emojiThree"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojifive"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/emojiFive"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/emojiSix"
        app:layout_constraintTop_toBottomOf="@+id/emojiThree" />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojisix"
        android:id="@+id/emojiSix"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/emojiSeven"
        app:layout_constraintStart_toEndOf="@id/emojiFive"
        app:layout_constraintTop_toBottomOf="@+id/emojiThree" />

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojiseven"
        android:id="@+id/emojiSeven"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@id/emojiEight"
        app:layout_constraintStart_toEndOf="@id/emojiSix"
        app:layout_constraintTop_toBottomOf="@+id/emojiThree" />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:src="@drawable/emojieight"
        android:layout_marginEnd="@dimen/_5sdp"
        android:id="@+id/emojiEight"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/emojiSeven"
        app:layout_constraintTop_toBottomOf="@+id/emojiThree" />

    <androidx.cardview.widget.CardView
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/emojiEight"
        app:layout_constraintStart_toStartOf="@id/emojiOne"
        android:layout_marginBottom="@dimen/_7sdp"
        app:layout_constraintTop_toBottomOf="@id/emojiEight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners_shape"
            android:fontFamily="@font/baloo_bhai_2_semibold"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>