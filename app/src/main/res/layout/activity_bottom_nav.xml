<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mk.diary.presentation.ui.tabs.BottomNavigationFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:id="@+id/backGroundTheme"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop" />

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_Bar"
        android:id="@+id/fragmentContainerBottomBar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/bottom_Bar"
            android:background="@drawable/bottom_sh"
            android:layout_height="@dimen/_50sdp"
            >
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_gravity="center"
                app:layout_constraintEnd_toStartOf="@id/galleryFragmentBtn"
                android:id="@+id/homeFragmentBtn"
                android:src="@drawable/homefragmenticone"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/homeFragmentBtn"
                app:layout_constraintEnd_toStartOf="@+id/nullController"
                android:id="@+id/galleryFragmentBtn"
                android:layout_gravity="center"
                android:src="@drawable/galleryicone"/>

            <ImageView
                android:id="@+id/nullController"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/callenderFragmentBtn"
                app:layout_constraintStart_toEndOf="@id/galleryFragmentBtn" />
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/nullController"
                app:layout_constraintEnd_toStartOf="@+id/menuSettingsFragmentBtn"
                android:id="@+id/callenderFragmentBtn"
                android:layout_gravity="center"
                android:src="@drawable/calenderviewicnoe"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/callenderFragmentBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/menuSettingsFragmentBtn"
                android:layout_gravity="center"
                android:src="@drawable/menusettingsicnoe"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/createNoteFragmentBtn"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/createnoteicone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_minus8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerBottomBar" />
    <ImageView
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/cross_icon_white"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/createSecondBtn"
        android:layout_marginTop="@dimen/_minus8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerBottomBar" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:id="@+id/passwordUpdatedDialogue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">
        <include
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent"
            layout="@layout/password_updated_alert"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>